#El ejercicio del peso corporal
peso = float (input('Escribe tu peso: '))
altura = float (input('Escribe tu altura: '))
bmi = peso / (altura * altura) 
print ('Este es tu bmi ' + str(bmi))

import math

# pedir al usuario el n칰mero al que se le quiere calcular la ra칤z cuadrada
num = float(input("Ingresa un n칰mero para calcular su ra칤z cuadrada: "))

# calcular la ra칤z cuadrada utilizando la funci칩n sqrt() del m칩dulo math
raiz_cuadrada = math.sqrt(num)

# mostrar la ra칤z cuadrada calculada
print("La ra칤z cuadrada de", num, "es", raiz_cuadrada)

# Hipotenusa
a = float(input('Escribe un n칰mero A: '))
b = float(input('Escribe un n칰mero B: '))
c = math.sqrt((a * a) + (b * b))
print('La hipotenusa es ' + str(c))


#Ejercicio de USD 
yuan = float (input('What do you left in yuan? '))
yen = float (input('What do you left in yen? '))
won = float (input('What do you left in won? '))
USD = (yuan*0.15) + (yen*0.0075) + (won*0.00077)
print ('')
print (str (USD))

#C칩digo de cara o cruz de manera random
import random

num = random.randint(0, 1)   # RNGesus will give us a random number that is either 0 or 1

if num > 0.5:
  print('Heads')
else:
  print('Tails')

